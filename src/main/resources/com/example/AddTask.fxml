<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.AddTaskController">

    <VBox alignment="TOP_LEFT" spacing="14" styleClass="dialog" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <children>
            <Label style="-fx-font-size:18px; -fx-font-weight:bold;" text="Add New Task" />

            <Label text="Title:" />
            <TextField fx:id="name" promptText="Enter task title" />

            <Label text="Description:" />
            <TextArea fx:id="descriere" prefRowCount="3" promptText="Enter details..." />

            <Label text="Deadline:" />
            <DatePicker fx:id="deadline" />

            <CheckBox fx:id="complet" text="Completed" />

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="cancel" styleClass="secondary" text="Cancel" />
                <Button fx:id="save" styleClass="primary" text="Save Task" />
            </HBox>
        </children>
    </VBox>
</AnchorPane>
