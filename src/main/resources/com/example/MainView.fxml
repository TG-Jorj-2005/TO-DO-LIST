<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="560.0" prefWidth="950.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.MainViewController">

    <!-- Sidebar -->
    <VBox prefWidth="140.0" styleClass="sidebar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <ImageView fitHeight="105.0" fitWidth="115.0" preserveRatio="true" styleClass="image-view">
                <image>
                    <Image url="@JRJ_100x100.png" />
                </image>
            </ImageView>
            <Button fx:id="add" prefWidth="110" styleClass="primary" text="Add Task" />
            <Button fx:id="delete" prefWidth="110" styleClass="danger" text="Delete" />
            <Button fx:id="inbox" prefWidth="110" styleClass="secondary" text="Inbox" />
            <Button fx:id="calendar" prefWidth="110" styleClass="secondary" text="Calendar" />
         <Accordion />
        </children>
    </VBox>

    <!-- Main content -->
    <AnchorPane AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="160.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">

        <TableView fx:id="task" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <columns>
                <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID" />
                <TableColumn fx:id="titleColumn" prefWidth="150.0" text="Title" />
                <TableColumn fx:id="detailColumn" prefWidth="250.0" text="Detail" />
                <TableColumn fx:id="completedColumn" prefWidth="100.0" text="Completed" />
                <TableColumn fx:id="deadlineColumn" prefWidth="150.0" text="Deadline" />
            </columns>
        </TableView>
    </AnchorPane>
</AnchorPane>
